@import 'container';
@import 'spacing';

@import '../main/pages/homepage'
@import '../main/pages/login'
@import '../main/pages/products'

@import '../main/components/cart'

can-we-skip-the-dishes-layout() {
  &__container {
    container();
    container-responsive();
  }

  &__panel {
    box-sizing: border-box;
    padding: $spacing-large;
    position: relative;
    width: 100vw;

    .panel {
      &__homepage {
        homepage()
        homepage-responsive()
      }

      &__login {
        login()
        login-responsive()
      }

      &__products {
        products()
        products-responsive()
      }

      &__error { text-align: center; }

      &__header {
        display: flex;
        flex-direction: flex-end;
        margin: $spacing-large;
        position: absolute;
        right: 0;
        top: 0;

        > button { margin-left: $spacing-base; }
      }
    }
  }

  &__cart {
    cart()
    cart-responsive()
  }
}

can-we-skip-the-dishes-layout-responsive() {
  +mq-medium-up() {
    &__panel {
      width: calc(100vw - 50%);
    }
  }
}
