@import 'reset';

@import 'palette';
@import 'typography';
@import 'utils';

@import 'layout';

@import '../header/header';
@import '../footer/footer';

font-face-normal()
font-face-bold()

::selection {
  background: $primary-color;
  color: $white-base;
}

body {
  -moz-osx-font-smoothing: grayscale;
  -webkit-font-smoothing: antialiased;
  background: $white-base;
  background-position: 50% 50%;
  background-size: 100%;
  color: $black-base;
  line-height: $font-size-base + $spacing-xsmall;
}

body, input, a {
  font-family: 'Mukta', Helvetica, sans-serif;
  font-size: $font-size-base;
  font-style: normal;
  font-weight: $font-weight-normal;
  text-decoration: none;
}

.can-we-skip-the-dishes {
  can-we-skip-the-dishes-layout();
  can-we-skip-the-dishes-layout-responsive();

  &__header {
    header();
  }

  &__wrapper {
    please-align-it-center();
  }

  &__footer {
    footer();
  }
}
