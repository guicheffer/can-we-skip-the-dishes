/*- ⭐️ Header Style
 *
 *
-*/

@import '../styleguide/container'
@import '../styleguide/palette'

header() {
  $size = 70px;

  container()
  container-responsive()

  background-color: $secondary-color;
  height: $size;
  position: absolute;
  top: 0;
  width: 100vw;

  &::before,
  &::after {
    color: $white-base;
    font-size: $spacing-large;
  }

  &::before {
    $width = 190px;
    $height = 50px;

    background-image: 'url(%s/header/skip-logo.svg)' % $cdn-path;
    background-position: 75px; //positioned right after the content text
    background-repeat: no-repeat;
    color: $white-base;
    content: 'Can we';
    float: left;
    font-size: $spacing-large;
    height: $height;
    line-height: $height;
    width: $width;
  }

  &::after {
    content: '?';
    line-height: 55px;
    position: relative;
    right: 0;
  }
}
